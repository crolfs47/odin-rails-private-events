<div class="section">
  <div class="container">
    <h2 class="title is-3 has-text-success-dark">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email, class: "has-text-success" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="field">
        <%= f.label :name, "Username", class: "has-text-success" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "username" %>
      </div>
      <div class="field">
        <%= f.label :password, class: "has-text-success" %>
        <% if @minimum_password_length %>
          <em class="has-text-success">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation, class: "has-text-success" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Sign up", class: "button is-success is-outlined" %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
