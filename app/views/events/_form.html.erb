 
<div class="column is-centered">
  <div class="column is-half">
    <%= form_with model: @event do |form| %>
      <div class="field">
        <%= form.label :title, class: "label has-text-success" %>
        <div class="control">
          <%= form.text_field :title, class: "input" %>
        </div>
        <% @event.errors.full_messages_for(:title).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      
      <div class="field">
        <%= form.label :date, class: "label has-text-success" %>
        <div class="control">
          <%= form.date_field :date, class: "input" %>
        </div>
        <% @event.errors.full_messages_for(:date).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <div class="field">
        <%= form.label :start_time, class: "label has-text-success" %>
        <div class="control">
          <%= form.time_field :start_time, class: "input" %>
        </div>
        <% @event.errors.full_messages_for(:start_time).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <div class="field">
        <%= form.label :end_time, class: "label has-text-success" %>
        <div class="control">
          <%= form.time_field :end_time, class: "input" %>
        </div>
        <% @event.errors.full_messages_for(:end_time).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <div class="field">
        <%= form.label :location, class: "label has-text-success" %>
        <div class="control">
          <%= form.text_field :location, class: "input" %>
        </div>
        <% @event.errors.full_messages_for(:location).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <div class="field">
        <%= form.label :description, class: "label has-text-success" %>
        <div class="control">
          <%= form.text_area :description, class: "input" %>
        </div>
        <% @event.errors.full_messages_for(:description).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <br>
      <div>
        <%= form.submit class: "button is-success is-outlined" %>
      </div>
    <% end %>
  </div>
</div>
