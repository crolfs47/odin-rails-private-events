<div class="section">
  <div class="container">
    <h1 class="title is-3 has-text-success">All Events</h1>
  </div>
  <div class="section">
    <h2 class="title is-4 has-text-success">Upcoming Events</h2>
    <div>
      <% @events.upcoming.each do |event| %>
        <div class="box"><%= link_to event.title, event %> - <%= event.date %>, <%= event.location %></div>
      <% end %>
    </div>
  </div>
  <div class="section">
    <h2 class="title is-4 has-text-success">Past Events</h2>
    <div>
      <% @events.past.each do |event| %>
        <div class="box"><%= link_to event.title, event %> - <%= event.date %>, <%= event.location %></div>
      <% end %>
    </div>
  </div>
</div>

