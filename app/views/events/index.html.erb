<div class="section">
  <div class="container">
    <h1 class="title is-3 has-text-success-dark">All Events</h1>
  </div>
  <div class="section">
    <h2 class="title is-5 has-text-success">Upcoming Events</h2>
    <div class="card-container">
      <% @events.upcoming.each do |event| %>
        <%= render "card", event: event %>
      <% end %>
    </div>
  </div>
  <div class="section">
    <h2 class="title is-5 has-text-success">Past Events</h2>
    <div class="card-container">
      <% @events.past.each do |event| %>
        <%= render "card", event: event %>
      <% end %>
    </div>
  </div>
</div>
